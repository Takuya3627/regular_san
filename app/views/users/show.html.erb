<div class="bg-gray m-5 px-25 w-25 text-center">
  <h3 class="heading">マイページ</h3>
</div>

<div class="container mx-auto">
  <div class="card mb-5 mx-auto" style="max-width: 500px;">
    <div class="row no-gutters">
      <div class="col-md-4 px-2 py-2">
        <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg" %>
      </div>
      <div class="col-md-6 px-5 py-3">
        <div class="card-body">
          <h4 class="card-title"><%= @user.name %></h4>
          <p class="card-text"><%= @user.introduction %></p>
        </div>
      </div>
      <div class="col-md-2 py-5">
        <% if @user == current_user %>
          <%= link_to "", edit_user_path, class: "fas fa-user-cog fa-3x size" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="">
  <div class="container text-center">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow">
          <div class="img-fluid">
          <%= link_to restaurant_path(restaurant.id) do %>
            <%= attachment_image_tag restaurant, :image, :fill, 348, 200, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </div>
          <div class="card-body">
            <h5 class="my-5"><%= restaurant.name %></h5>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group mx-auto">
                <% if restaurant.user == current_user %>
                  <p class="col"><%= link_to "編集する", edit_restaurant_path(restaurant), class: "btn btn-success ml2" %></p>
                  <p class="col"><%= link_to "削除する", restaurant_path(restaurant), method: :delete, class: "btn btn-danger ml2" %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="">
  <%= paginate @restaurants %>
</div>