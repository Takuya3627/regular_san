<section class="inner">
  <div class="bg-gray m-5 px-25 w-25 text-center">
    <h3 class="heading">新規ユーザー登録</h3>
  </div>
  <%# if flash[:danger] %>
    <p class="text-red"><%#= flash[:danger] %></p>
  <%# end %>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb2">
      <%= f.label "ユーザー名" %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "常連太郎" %>
    </div>

    <div class="field mb2">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(※<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "password", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, placeholder: "password_confirmation", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <h5 class="section-ttl">既に登録がお済みの方</h5>
  <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
</section>