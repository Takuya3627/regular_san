<div class="bg-gray m-5 px-25 w-25 text-center">
  <h3 class="heading">投稿内容を編集</h3>
</div>

<% if @restaurant.errors.any? %>
  <%= @restaurant.errors.count %>件のエラーが発生しました。
  <% @restaurant.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class='container'>
  <%= form_with model:@restaurant, local:true do |f| %>
  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2 pt-2">
      <p>店名</p>
    </div>
    <div class="col-md-8 mx-auto">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2 pt-2">
      <p>紹介文</p>
    </div>
    <div class="col-md-8 mx-auto">
      <%= f.text_area :introduction %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2 pt-2">
      <p>写真</p>
    </div>
    <div class="col-md-8 mx-auto">
      <%= f.attachment_field :image %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2 pt-2">
      <p>住所</p>
    </div>
    <div class="col-md-8 mx-auto">
      <%= f.text_field :address, autofocus: true %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2 pt-2">
      <p>お店のホームページ</p>
    </div>
    <div class="col-md-8 mx-auto">
      <%= f.text_field :home_page_url %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <p>カテゴリー</p>
    </div>
    <div class="col-md-6 pr-3 mx-auto">
      <%= f.collection_select :category_id, Category.all, :id, :name, {class: "form-select form-select-sm"},  { required: true } %>
    </div>
  </div>

  <div class='row md-1 mb-1'>
    <div class="mx-auto">
      <%= f.submit '     投稿     ', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>