<div class="bg-gray m-5 px-25 w-25 text-center">
  <h3 class="heading">お店の一覧</h3>
</div>

<div class="">
  <%= paginate @restaurants %>
</div>

<div class="">
  <div class="container">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="img-fluid">
          <%= link_to restaurant_path(restaurant.id) do %>
            <%= attachment_image_tag restaurant, :image, :fill, 348, 200, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </div>
          <div class="card-body">
            <p><%= attachment_image_tag restaurant.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
            <p><%= link_to restaurant.user.name, user_path(restaurant.user) %></p>
            <p class="restaurant_<%= restaurant.id %>">
              <%= render "favorites/favorite", restaurant: restaurant %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              </div>
              <small class="text-muted">投稿日時：<%= restaurant.created_at.strftime('%Y/%m/%d %H:%M') %></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
