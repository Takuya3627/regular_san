<div class="bg-gray m-5 px-25 w-25 text-center">
  <h3 class="heading">お店の一覧</h3>
</div>

<div class="">
  <%= paginate @restaurants %>
</div>

<div class="">
  <div class="container">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow">
          <div class="img-fluid">
          <%= link_to restaurant_path(restaurant.id) do %>
            <%= attachment_image_tag restaurant, :image, :fill, 348, 200, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col">
                <%= attachment_image_tag restaurant.user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
              <h5 class="col d-flex align-items-center">
                <%= link_to restaurant.user.name, user_path(restaurant.user) %>
              </h5>
              <div class="col d-flex align-items-end">
                <a class="restaurant_<%= restaurant.id %>">
                  <%= render "favorites/favorite", restaurant: restaurant %>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 shadow-sm">
                <h5 class="my-3"><%= restaurant.name %></h5>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 border-bottom">
                <p class="mb-1 mt-2">コメント</p>
              </div>
              <div class="col-md-12 pt-2">
                <%= restaurant.introduction %>
              </div>
            </div>
          </div>
          <div class="card-footer text-center">
            <small class="text-muted">投稿日時：<%= restaurant.created_at.strftime('%Y/%m/%d %H:%M') %></small>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
