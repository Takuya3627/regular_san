<div class="bg-light m-5 px-25 w-25 text-center">
  <h3>飲食店一覧</h3>
</div>

<% @restaurants.each do |restaurant| %>
<div>
  <%= link_to restaurant_path(restaurant.id) do %>
  <%= attachment_image_tag restaurant, :image, :fill, 400, 300, format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <p><%= attachment_image_tag restaurant.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p><%= link_to restaurant.user.name, user_path(restaurant.user) %></p>
  <p class="restaurant_<%= restaurant.id %>">
    <%= render "favorites/favorite", restaurant: restaurant %>
  </p


  
  <p>投稿日時：<%= restaurant.created_at.strftime('%Y/%m/%d %H:%M') %></p>
</div>
<% end %>