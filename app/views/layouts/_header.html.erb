<header class="p-3 mb-2 sticky-top" style="height: 80px;">
    <div class="container-fluid">
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-dark">
          <li>
            <%= link_to "常連さん", root_path, class: "regular_san" %>
          </li>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <div class="">
                <%= search_form_for @q, url: restaurant_category_path do |f| %>
                  <%= f.collection_select :category_id_eq, Category.where.not(id: 0), :id, :name, {include_blank: "こちらからカテゴリーを選択してください"},  { required: true }  %>
                  <%= f.submit '検索', class: 'btn btn-secondary btn-sm' %>
                <% end %>
              </div>
              <li class="nav-item">
                <%= link_to "お店一覧", restaurants_path, class: "po" %>
              </li>
              <li class="nav-item">
                <%= link_to "登録者一覧", users_path, class: "po" %>
              </li>
              <li class="nav-item">
                <%= link_to "オススメする!", new_restaurant_path, class: "po" %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class: "po" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "po" %>
              </li>
            </ul>
          </div>
        </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <li>
          <%= link_to "常連さん", root_path, class: "regular_san" %>
        </li>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <div class="">
              <%= search_form_for @q, url: restaurant_category_path do |f| %>
                <%= f.collection_select :category_id_eq, Category.where.not(id: 0), :id, :name, {include_blank: "こちらからカテゴリーを選択してください"},  { required: true }  %>
                <%= f.submit '検索', class: 'btn btn-secondary btn-sm' %>
              <% end %>
            </div>
            <li class="nav-item">
              <%= link_to "お店一覧", restaurants_path, class: "po" %>
            </li>
            <li class="nav-item">
              <%= link_to "登録者一覧", users_path, class: "po" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: "po" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "po" %>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
  </div>
</header>
