<% if user_signed_in? %>
  <% if restaurant.favorited_by?(current_user) %>
    <%= link_to "", restaurant_favorites_path(restaurant), method: :delete, remote: true, class: "far fa-kiss-wink-heart fa-3x size", style: "color: #CCCCCC;" %>
    <%= restaurant.favorites.count %>
  <% else %>
    <%= link_to "", restaurant_favorites_path(restaurant), method: :post, remote: true, class: "fas fa-smile fa-3x size", style: "color: #CCCCCC;" %>
    <%= restaurant.favorites.count %>
  <% end %>
<% end %>